main.page-main.main
  .site-container
    .ui-fieldset__list
      .ui-fieldset(data-label="Компонент кнопки: ui-button")
        +ui-button({
          label: 'Обычная кнопка',
          size: 'full',
          type: 'big'
        })
        +ui-button({
          label: 'Обычная ссылка',
          size: 'full',
          type: 'big',
          href: './ui-kit.html'
        })
        +ui-button({
          label: 'Обычная кнопка(small)',
          size: 'auto',
          type: 'default'
        })
        +ui-button({
          label: 'Обычная ссылка(small)',
          size: 'auto',
          type: 'default',
          href: './ui-kit.html'
        })
        +ui-button({
          label: 'Обычная кнопка(outline)',
          size: 'auto',
          type: 'default-outline'
        })
        +ui-button({
          label: 'Обычная ссылка(outline)',
          size: 'auto',
          type: 'default-outline',
          href: './ui-kit.html'
